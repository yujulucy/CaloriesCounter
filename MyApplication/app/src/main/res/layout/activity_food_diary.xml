<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#dedede">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Food Diary"
        android:id="@+id/textView6"
        android:textSize="40dp"
        android:background="#ff6969"
        android:textAlignment="center"
        android:autoText="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvFoodDate"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:background="#fbf8f9"
        android:textAlignment="center"
        android:text="Date" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Breakfast"
                android:id="@+id/textView7"
                android:textSize="30dp"
                android:background="#ff6969"
                android:layout_marginTop="30dp"
                android:textColor="#ffffff"
                android:autoText="false" />

    <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewJSON"
                android:textSize="30dp"
                android:background="#f9f7fd"
                android:hint="Breakfast content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="+ Add Food"
        android:id="@+id/bBreakfast"
        android:background="#ffffff"
        android:textColor="#ff6969" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Expand View"
        android:id="@+id/bExpandView"
        android:background="#ffffff"
        android:textColor="#ff6969"
        android:onClick="read"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lunch"
        android:id="@+id/textView9"
        android:textSize="30dp"
        android:background="#ff6969"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView10"
        android:textSize="30dp"
        android:background="#f9f7fe"
        android:hint="Lunch content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="+ Add Food"
        android:id="@+id/bLunch"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff6969" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dinner"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:background="#ff6969"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView12"
        android:textSize="30dp"
        android:background="#fafafb"
        android:hint="Dinner content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="+ Add Food"
        android:id="@+id/bDinner"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff6969" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Snacks"
        android:id="@+id/textView13"
        android:textSize="30dp"
        android:background="#ff6969"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView14"
        android:textSize="30dp"
        android:background="#fbfbfb"
        android:hint="Snacks content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="+ Add Food"
        android:id="@+id/bSnack"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff6969" />

</LinearLayout>

</ScrollView>